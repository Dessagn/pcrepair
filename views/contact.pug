extends layout

block content
  .container
    h1.center= header

    .row
      form.form-horizontal(action='contact/sendMessage', method='post', data-toggle='validator', role='form')
        .form-group
          label.col-sm-2.control-label(for='subject_title') Title
          .col-sm-8
            input#subject_title.form-control(type='text', name='subject_title', placeholder='Title')
        .form-group
          label.col-sm-2.control-label(for='first_name') First Name
          .col-sm-8
            input#first_name.form-control(type='text', name='first_name', placeholder='First Name')
        .form-group
          label.col-sm-2.control-label(for='last_name') Last Name
          .col-sm-8
            input#last_name.form-control(type='last_name', name='last_name', placeholder='Last Name')
        .form-group
          label.col-sm-2.control-label(for='email') Email
          .col-sm-8
            input#email.form-control(type='email', name='email', placeholder='Email', data-error="Email format not valid", required='')
            .help-block.with-errors
        .form-group
          label.col-sm-2.control-label(for='textarea') Message
          .col-sm-8
            textarea#textarea.form-control.input-lg(name='message', rows='5', placeholder='Write your message here ...')
        .form-group
          .col-sm-offset-2.col-sm-8
            button.submit.btn.btn-primary.pull-right(type='submit') Submit
  .map
    <iframe width='100%' height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/search?q=Helsinki%2C%20Finland&key=AIzaSyAkVqWZkQIknNqAK1tnkn4o5q2v4anvr8k&zoom=15" allowfullscreen></iframe>




